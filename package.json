{
  "name": "dexteria",
  "version": "0.1.0",
  "description": "Dexteria — AI Project Executor: An AI-driven desktop app for project planning and execution",
  "main": "dist/main/main.js",
  "author": "Dexteria Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && npm run copy:bundled-plugins && electron .",
    "build": "npm run build:vite && npm run build:electron && npm run copy:bundled-plugins",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "copy:bundled-plugins": "node -e \"const fs=require('fs');const path=require('path');const src='src/main/plugins/bundled';const dst='dist/main/plugins/bundled';const copy=(s,d)=>{if(!fs.existsSync(d))fs.mkdirSync(d,{recursive:true});for(const f of fs.readdirSync(s,{withFileTypes:true})){const sp=path.join(s,f.name),dp=path.join(d,f.name);if(f.isDirectory())copy(sp,dp);else if(!f.name.endsWith('.ts'))fs.copyFileSync(sp,dp);}};copy(src,dst);console.log('Bundled plugins copied')\"",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-virtual": "^3.13.18",
    "adnia-ui": "file:./packages/adnia-ui",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "diff": "^8.0.2",
    "lucide-react": "^0.562.0",
    "minimatch": "^10.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^2.0.23",
    "tailwind-merge": "^3.4.0",
    "uuid": "^9.0.1",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/minimatch": "^5.1.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^4.0.17",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dexteria.app",
    "productName": "Dexteria",
    "copyright": "Copyright © 2024 Dexteria Team",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/logoicon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/logoicon.ico",
      "uninstallerIcon": "assets/logoicon.ico",
      "installerHeaderIcon": "assets/logoicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dexteria"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/logoicon.png",
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/logoicon.png",
      "category": "Development",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}

{
  "id": "jira-connector",
  "name": "Jira Connector",
  "version": "1.0.0",
  "description": "Import tasks from Jira Cloud into Dexteria. Supports searching issues with JQL and syncing issue status.",
  "author": "Dexteria Team",
  "main": "main.js",
  "permissions": [
    "network",
    "storage",
    "tasks:create",
    "tasks:update"
  ],
  "settings": {
    "schema": {
      "domain": {
        "type": "string",
        "label": "Jira Domain",
        "description": "Your Jira Cloud domain (e.g., yourcompany.atlassian.net)",
        "required": true
      },
      "email": {
        "type": "string",
        "label": "Email",
        "description": "Your Atlassian account email",
        "required": true
      },
      "apiToken": {
        "type": "password",
        "label": "API Token",
        "description": "Your Jira API token (create at https://id.atlassian.com/manage-profile/security/api-tokens)",
        "required": true
      },
      "defaultProject": {
        "type": "string",
        "label": "Default Project",
        "description": "Default Jira project key to import from (e.g., PROJ)",
        "required": false
      },
      "importAssignedOnly": {
        "type": "boolean",
        "label": "Import Assigned Only",
        "description": "Only import issues assigned to you",
        "default": false
      }
    }
  },
  "hooks": [
    "task:afterCreate",
    "task:afterUpdate"
  ]
}
